    <div class="container-fluid">

        @if (Request.IsAuthenticated && Session["name"] == null)
        {
            @Html.ActionLink("Home", "Home", "Supplier", new { area = "" }, new { @class = "navbar-brand" })<br /><br />
            @Html.ActionLink("Fill Details", "EditProfile", "Supplier", new { area = "" }, new { @class = "navbar-brand" })<br /><br />
